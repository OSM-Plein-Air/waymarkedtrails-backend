{% call layer.query("slopeways", styles=['slopes-halo', 'slopes']) %}
  SELECT difficulty = 1 as novice, difficulty = 2 as easy,
         difficulty = 3 as intermediate, difficulty = 4 as advanced,
         difficulty = 5 as expert, difficulty = 6 as extreme,
         difficulty = 10 as freeride,
         piste = 1 as downhill, piste = 2 as nordic, piste = 3 as skitour,
         piste = 4 as sled, piste = 5 as hike, piste = 6 as sleigh,
         symbol, geom
  FROM {{ table.ways }}
{% endcall %}

{% for id in range(1, 6) %}
  {% call layer.query("shields_relations" ~ id, max=zoom.z15, buffer="512",
                      styles=['Shields']) %}
    SELECT geom, symbol[{{ id }}] as fname, array_length(symbol,1) as numshields
    FROM {{ table.style }}
    WHERE array_length(symbol,1) >= {{ id }}
    ORDER BY st_npoints(geom100) DESC
  {% endcall %}
{% endfor %}

<Style name="Shields">
  <Rule>
    <ShieldSymbolizer base="syms" file="[fname].svg" placement="point" spacing="400" face-name="DejaVu Sans Mono Bold" label-position-tolerance="200" minimum-distance="30" horizontal-alignment="middle" vertical-alignment="middle" minimum-path-length="10" avoid-edges="true" />
  </Rule>
</Style>

{% call layer.query("shields_ways", max=zoom.z15, buffer="512",
                    styles=['Shields']) %}
  SELECT geom, symbol as fname FROM {{ table.ways }} WHERE char_length(symbol) > 7
{% endcall %}

